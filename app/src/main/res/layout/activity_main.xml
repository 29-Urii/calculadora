<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    tools:context="itsco.edu.calculadora.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/main_layout">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:text=" "
            android:textSize="40sp"
            android:id="@+id/txtNumero"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_below="@+id/text_layout">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:text="1"
                    android:textSize="40sp"
                    android:onClick="onClickBtn1"
                    android:layout_width="80dp"
                    android:layout_height="80dp" />
                <Button
                    android:text="2"
                    android:textSize="40sp"
                    android:onClick="onClickBtn2"
                    android:layout_width="80dp"
                    android:layout_height="80dp" />
                <Button
                    android:text="3"
                    android:textSize="40sp"
                    android:onClick="onClickBtn3"
                    android:layout_width="80dp"
                    android:layout_height="80dp" />
                <Button
                    android:text="+"
                    android:textSize="40sp"
                    android:onClick="onClickSuma"
                    android:layout_width="144dp"
                    android:layout_height="80dp"
                    android:background="@color/colorPrimaryDark"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:text="4"
                    android:textSize="40sp"
                    android:onClick="onClickBtn4"
                    android:layout_width="80dp"
                    android:layout_height="80dp" />
                <Button
                    android:text="5"
                    android:textSize="40sp"
                    android:onClick="onClickBtn5"
                    android:layout_width="80dp"
                    android:layout_height="80dp" />
                <Button
                    android:text="6"
                    android:textSize="40sp"
                    android:onClick="onClickBtn6"
                    android:layout_width="80dp"
                    android:layout_height="80dp" />
                <Button
                    android:text="-"
                    android:textSize="40sp"
                    android:onClick="onClickResta"
                    android:layout_width="146dp"
                    android:layout_height="80dp"
                    android:background="@color/colorPrimaryDark"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:text="7"
                    android:textSize="40sp"
                    android:onClick="onClickBtn7"
                    android:layout_width="80dp"
                    android:layout_height="80dp" />
                <Button
                    android:text="8"
                    android:textSize="40sp"
                    android:onClick="onClickBtn8"
                    android:layout_width="80dp"
                    android:layout_height="80dp" />
                <Button
                    android:text="9"
                    android:textSize="40sp"
                    android:onClick="onClickBtn9"
                    android:layout_width="80dp"
                    android:layout_height="80dp" />
                <Button
                    android:text="%"
                    android:textSize="40sp"
                    android:onClick="onClickDivision"
                    android:layout_width="146dp"
                    android:layout_height="80dp"
                    android:background="@color/colorPrimaryDark"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:text="."
                    android:textSize="40sp"
                    android:onClick="onClickBtnPunto"
                    android:background="@android:color/holo_blue_light" />
                <Button
                    android:layout_width="159dp"
                    android:layout_height="80dp"
                    android:text="0"
                    android:textSize="40sp"
                    android:onClick="onClickBtn0" />

                <Button
                    android:text="*"
                    android:textSize="40sp"
                    android:onClick="onClickMultiplicacion"
                    android:layout_width="156dp"
                    android:layout_height="80dp"
                    android:background="@color/colorPrimaryDark"/>

            </LinearLayout>
            <LinearLayout android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:text="C"
                    android:textSize="40sp"
                    android:onClick="onClickLimpia"
                    android:layout_width="237dp"
                    android:layout_height="80dp"
                    android:background="@color/colorAccent"/>

                <Button
                    android:text="="
                    android:textSize="40sp"
                    android:layout_width="160dp"
                    android:layout_height="80dp"
                    android:onClick="onClickIgual"
                    android:background="@android:color/holo_orange_light"/>



        </LinearLayout>
        </LinearLayout>

    </LinearLayout>




</RelativeLayout>
